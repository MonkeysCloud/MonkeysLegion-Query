{
  "name": "monkeyscloud/monkeyslegion-query",
  "description": "Lightweight Query Builder & Microâ€‘ORM for MonkeysLegion",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "monkeyscloud/monkeyslegion-database": "^1.0",
    "monkeyscloud/monkeyslegion-entity": "^1.0",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "MonkeysLegion\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.2",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src tests --level=8",
    "cs": "phpcs --standard=PSR12 src tests",
    "cs-fix": "phpcbf --standard=PSR12 src tests",
    "check": [
      "@cs",
      "@phpstan",
      "@test"
    ]
  }
}
